# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://admin:securepassword@localhost:5432/church_attendance

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourchurch.com
FROM_NAME=Your Church Name

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=church-attendance-files
AWS_REGION=us-east-1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@yourchurch.com
ADMIN_PASSWORD=change-this-password